<head>
    <script src="~/js/site.js"></script>
</head>
<body>
    @if(!Escape.salasEscapadas[14]){
        <h2 class="Temportizador">Temportizador: <span id="tiempo"></span></h2>

        <div class = "suspenso">
            <audio controls autoplay>
                <source src="~/sounds/MusicaSuspenso.mp3">
            </audio>
        </div>

        <p class="consigna">En un depósito, hay un nivel de agua muy bajo pero que se duplica todos los días. Tarda 60 días en llenarse.</p>
        <form action='@Url.Action("Habitacion")'>
            <p class="pregunta">¿Cuánto tarda en llegar a la mitad?</p>
            <input class="input" type="number" name="clave" min="1" max="60" autocomplete="off" required>
            <input type="submit" value="Enviar">
        </form>

        @if(ViewBag.Error != null){
            <p class="error">@ViewBag.Error</p>
        }

        <img class="tanque" src="~/img/tanqueAgua.jpg">
    }
    else{
        <b class="finishedRoom">Ya completo la sala!</b>
        <a class="botonMapa" href='@Url.Action("Mapa")'>Volver al Mapa</a>
    }
</body>